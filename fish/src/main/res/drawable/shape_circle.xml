<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!-- solid表示远的填充色 -->
    <solid android:color="@color/color_0000aa" />
    <!-- stroke则代表远的边框线 -->
    <stroke
        android:width="1dp"
        android:color="@color/color_0000aa" />
    <!-- size控制高宽 -->
    <size
        android:height="14dp"
        android:width="14dp" />
</shape>